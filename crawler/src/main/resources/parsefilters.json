{
  "com.digitalpebble.stormcrawler.parse.ParseFilters": [
    {
      "class": "org.n52.webcrawl.XPath3Filter",
      "name": "XPath3Filter",
      "params": {
        "parse.title": [
            "/HTML/HEAD/TITLE",
            "/HTML/HEAD/META[@name=\"title\"]/@content"
        ],
        "topics.data.portal.xpath": [
          "/HTML/HEAD/META[@generator][starts-with(@content, 'ckan')]/@content",
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'dkan')]]",
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'geoportal')]]",
          "//SCRIPT[contains(text(), 'entryscape-catalog-portal')]"
        ],
        "topics.data.api.xpath": [
          "//A[matches(lower-case(@href), '(getcapabilities|wfs|wms)')]/@href"
        ],
        "topics.data.link.xpath": [
          "//SCRIPT[@type='application/ld+json']/text()[matches(., '\"@type\":\\s?\"(\\S+/)?Dataset\"')]",
          "//A[contains(lower-case(@href), 'dataset')]/@href",
          "//A[text()[matches(lower-case(.), '(csv|json|\\.zip)')] or matches(lower-case(@href), '(csv|json|\\.zip)')]/@href",
          "//A[text()[contains(lower-case(.), 'xml')] or contains(lower-case(@href), 'xml') and not(matches(lower-case(@href), '(sitemap|feed|atom|rss)'))]/@href"
        ],
        "topics.data.pdf.xpath": [
          "//A[text()[contains(lower-case(.), 'pdf')] or contains(lower-case(@href), 'pdf')]/@href",
          "//A[text()[contains(lower-case(.), 'download')]]/@href"
        ],
        "topics.data.license.xpath": [
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'license')]]/../descendant::text()",
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'lizenz')]]/../descendant::text()"
        ],
        "topics.contact.xpath": [
          "//*[text()[matches(., '.+@.+')]]/text()",
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'contact')]]/../descendant::text()",
          "//*[not(matches(name(), '(SCRIPT|LINK)'))][text()[contains(lower-case(.), 'kontakt')]]/../descendant::text()"
        ]
      }
    },
    {
      "class": "org.n52.webcrawl.SimpleTopicScoreParseFilter",
      "name": "SimpleTopicScoreParseFilter",
      "params": {
        "topics.data.portal.keywords": [
          "ckan"
        ],
        "topics.data.realtime.keywords": [
          "realtime"
        ],
        "topics.data.historic.keywords": [
          "historic"
        ]
      }
    },
    {
      "class": "com.digitalpebble.stormcrawler.parse.filter.DomainParseFilter",
      "name": "DomainParseFilter",
      "params": {
        "key": "host",
        "byHost": true
       }
    }
  ]
}
